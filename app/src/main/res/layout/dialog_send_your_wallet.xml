<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="itemModel"
            type="com.wowlet.entities.local.EnterWallet" />

        <variable
            name="viewModel"
            type="com.p2p.wowlet.fragment.detailwallet.viewmodel.DetailWalletViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_term_condition_accept_decline">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/enter_you_wallet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@{String.format(@string/send_to_your_wallet,itemModel.name)}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dismissDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_25"
            android:tint="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_380"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_48"
            android:background="@drawable/bg_already_have_account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_you_wallet_title">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/walletQrCodeIv"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_150"
                android:layout_marginTop="@dimen/dp_21"
                android:layout_marginBottom="@dimen/dp_31"
                app:image_source_bitmap="@{itemModel.qrCode}"
                app:layout_constraintBottom_toTopOf="@+id/wallet_address_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                app:image_source="@{itemModel.icon}"
                app:layout_constraintBottom_toBottomOf="@+id/walletQrCodeIv"
                app:layout_constraintEnd_toEndOf="@+id/walletQrCodeIv"
                app:layout_constraintStart_toStartOf="@+id/walletQrCodeIv"
                app:layout_constraintTop_toTopOf="@+id/walletQrCodeIv" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/wallet_address_tv"
                style="@style/Black.13.Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginEnd="@dimen/dp_30"
                android:gravity="center"
                android:text="@{itemModel.name}"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/walletQrCodeIv" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tokenText"
                style="@style/Grey.15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_2"
                android:background="@drawable/bg_gray_token"
                android:gravity="center_vertical"
                android:lines="1"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_19"
                android:text="@{itemModel.walletAddress}"
                app:layout_constraintEnd_toStartOf="@+id/shareWalletContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wallet_address_tv"
                tools:text="0xHg6733...2rfsd2" />

            <FrameLayout
                android:id="@+id/shareWalletContainer"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@drawable/bg_gray_token_share"
                app:layout_constraintBottom_toBottomOf="@+id/tokenText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wallet_address_tv">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_21"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_12"
                    app:srcCompat="@drawable/ic_share_ios" />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Grey.15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginVertical="@dimen/dp_24"
                android:gravity="center"
                android:text="@string/all_deposits_are_stored_100_non_custodiallity_with_keys_held_on_this_device"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tokenText" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>