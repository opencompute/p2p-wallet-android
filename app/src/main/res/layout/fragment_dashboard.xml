<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.p2p.wowlet.fragment.dashboard.viewmodel.DashboardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.dashboard.view.DashboardFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/lScannerContainer"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_33"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:onClick="@{()->viewModel.goToScannerFragment()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_qr_scaner"
            android:tint="@color/gray_blue_400"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgProfilePic"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_33"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:onClick="@{()->viewModel.openProfileDialog()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_default_coin"
            android:elevation="@dimen/dp_16"
            />

        <View
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:background="@drawable/ic_profile_online"
            app:layout_constraintEnd_toEndOf="@id/imgProfilePic"
            app:layout_constraintTop_toTopOf="@id/imgProfilePic"
            android:elevation="@dimen/dp_16"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/rootContainer"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lScannerContainer">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/myBalanceContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_33"
                android:background="@drawable/bg_already_have_account"
                android:elevation="@dimen/dp_2"
                android:onClick="@{() -> viewModel.openAllMyTokensDialog()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/total_balance_title"
                    style="@style/Black.15"
                    android:fontFamily="@font/sf_pro_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="@string/total_balance"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/vPrice"
                    style="@style/Black.21.Bold"
                    android:fontFamily="@font/font_sf_pro_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="@{String.format(@string/usd_symbol_2,viewModel.yourBalance)}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/total_balance_title"
                    tools:text="$0.0" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Gray.13"
                    android:fontFamily="@font/sf_pro_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:text="@string/all_tokens"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vPrice" />

                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/vPieChartData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_15" />
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vRvWallets"
                adapter_list="@{viewModel.getWalletData}"
                view_model="@{viewModel}"
                android:layout_width="@dimen/dp_0"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                app:layout_constraintBottom_toTopOf="@+id/allMyTokensContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myBalanceContainer"
                tools:itemCount="4"
                tools:listitem="@layout/item_wallets" />

            <RelativeLayout
                android:id="@+id/allMyTokensContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/bg_already_have_account_gray_15"
                android:onClick="@{()->viewModel.openAllMyTokensDialog()}"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/lCoinContainer">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Grey.17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_20"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/font_sf_pro_display"
                    android:textStyle="bold"
                    android:text="@string/all_my_tokens"
                    tools:ignore="RelativeOverlap" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_18"
                    app:srcCompat="@drawable/ic_arrow_right" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addTokensContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/bg_already_have_account_gray_15"
                android:visibility="gone"
                android:onClick="@{()->viewModel.openAddCoinDialog()}"
                app:layout_constraintBottom_toTopOf="@+id/lCoinContainer">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Black.17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_20"
                    android:fontFamily="@font/font_sf_pro_display"
                    android:textStyle="bold"
                    android:text="@string/add_token"
                    tools:ignore="RelativeOverlap" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_18"
                    app:srcCompat="@drawable/ic_inline_add" />

            </RelativeLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/lCoinContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/bg_radius_top"
                android:elevation="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/dp_17"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()->viewModel.enterWalletDialog()}"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_receive" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Grey.12"
                        android:fontFamily="@font/font_sf_pro_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_7"
                        android:gravity="center"
                        android:text="@string/receive" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_36"
                    android:onClick="@{()->viewModel.goToSendCoinFragment()}"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_send" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Grey.12"
                        android:fontFamily="@font/font_sf_pro_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_7"
                        android:gravity="center"
                        android:text="@string/send" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()->viewModel.goToSwapFragment()}"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_exchange" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Grey.12"
                        android:fontFamily="@font/font_sf_pro_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_7"
                        android:gravity="center"
                        android:text="@string/exchange" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>