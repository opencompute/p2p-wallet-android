        <LinearLayout
            android:id="@+id/lCopyAndShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="horizontal"
            android:weightSum="100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wallet_address_tv">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/copyWallet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="85"
                app:text="@{itemModel.walletAddress}"
                app:symbolCount="@{6}"
                android:singleLine="true"
                tools:text="0x3458...4584"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:textColor="@color/hintColor"
                android:layout_margin="@dimen/dp_1"
                android:background="@drawable/bg_copy_wallet_address_to_clipboard_btn" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/shareWallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:layout_margin="@dimen/dp_1"
                android:background="@drawable/bg_share_upload_btn"
                />



