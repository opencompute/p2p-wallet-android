<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

        <variable
            name="walletItem"
            type="com.wowlet.entities.local.WalletItem" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingTop="@dimen/dp_20"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgTokenSwap"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@drawable/ic_wallet_blue"
            image_source_radius="@{walletItem.icon}"
            radius_dp="@{12}"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTokenName"
            style="@style/Black300.17.SfProText"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imgTokenSwap"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@{walletItem.tokenName}"
            tools:text="Solana"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTokenSymbol"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            style="@style/Grey400.13.SfProDisplay"
            app:layout_constraintStart_toEndOf="@id/imgTokenSwap"
            app:layout_constraintBottom_toBottomOf="@id/imgTokenSwap"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@{walletItem.tokenSymbol}"
            tools:text="SOL"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>