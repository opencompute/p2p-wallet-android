<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_20"
    android:paddingTop="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgTokenSwap"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_wallet_blue" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTokenName"
        style="@style/Black300.17.SfProText"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintStart_toEndOf="@id/imgTokenSwap"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Solana" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtTokenSymbol"
        style="@style/Grey400.13.SfProDisplay"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@id/imgTokenSwap"
        app:layout_constraintStart_toEndOf="@id/imgTokenSwap"
        tools:text="SOL" />
</androidx.constraintlayout.widget.ConstraintLayout>